<!--pages/text/text.wxml-->
<!-- 1.基本使用 -->
<text>Hello wrold\n</text>
<text>你好小程序\n</text>

<!-- 2.user-select：true -->
<!-- 默认情况下text中的文本长按是不能选中 -->
<text user-select>Hello Suyan</text>
<text>Hello \n</text>

<!-- 3.对space：决定文本空格的大小 -->
<!--
ensp	中文字符空格一半大小	
emsp	中文字符空格大小	
nbsp	根据字体设置的空格大小 
-->
<text>Hello wrold\n</text>
<text space="nbsp">Hello wrold\n</text>
<text space="ensp">Hello wrold\n</text>
<text space="emsp">Hello wrold\n</text>

<!-- 4.decode属性：是否解码属性 -->
<text decode>7 &gt; 3</text>
