<!--pages/input/input.wxml-->
<!-- 1.input的基本使用 -->
<input />

<!-- 2.value：input中的默认值 -->
<input value="哈哈哈" />

<!-- 3.type：决定键盘类型（文本/数字/身份证号码） -->
<input type="number" />

<!-- 4.passwrod：暗文 -->
<input password/>

<!-- 5.placeholder：占位字符 -->
<input placeholder="请输入文本"/>

<!-- 6.input绑定事件 -->
<input bindinput="handleInput"
       bindfocus="handleFocus"
       bindblur="hanldeBlur"/>
