<!--pages/view/view.wxml-->
<!-- 1.view的基本使用 -->
<view class="box">Hello wrold</view>
<view>
  <text>Hello wrold</text>
</view>

<!-- 2.hover-class：当用户按下组件时，显示的样式 -->
<!-- 3.hover-stay-time：手指松开后 点击状态保留时间 -->
<view class="box1" hover-class="hover-view" hover-stay-time="0">box1</view>

<!-- 4.hover-stop-propagation：阻止祖先元素的点击态 -->
<view class="box2" hover-class="box2-hover">
  <view class="box1" 
        hover-class="hover-view" 
        hover-stay-time="0"
        hover-stop-propagation
        >
    box1
  </view>
</view>

